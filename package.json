{
  "name": "@planmaestro/tools",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise Tools Platform - Unified dashboard for QR generation, Excel processing, and data pipeline management",
  "scripts": {
    "predev": "./scripts/ensure-db.sh && ./scripts/cleanup-ports.sh",
    "dev": "concurrently --kill-others --names \"FRONTEND,BACKEND\" --prefix-colors \"blue,green\" \"next dev --port 3005\" \"cd api/python && venv/bin/uvicorn main:app --reload --port 8000\"",
    "dev:frontend": "next dev --port 3005",
    "dev:backend": "cd api/python && venv/bin/uvicorn main:app --reload --port 8000",
    "build": "next build",
    "start": "next start --port ${PORT:-3005}",
    "lint": "next lint",
    "cleanup": "./scripts/cleanup-ports.sh",
    "python:setup": "cd api/python && python3 -m venv venv && venv/bin/pip install --upgrade pip && venv/bin/pip install -r requirements.txt",
    "python:install": "cd api/python && venv/bin/pip install -r requirements.txt",
    "python:dev": "cd api/python && venv/bin/uvicorn main:app --reload --port 8000",
    "python:dev-noreload": "cd api/python && venv/bin/uvicorn main:app --port 8000",
    "dev:noreload": "concurrently --kill-others --names \"FRONTEND,BACKEND\" --prefix-colors \"blue,green\" \"next dev --port 3005\" \"cd api/python && venv/bin/uvicorn main:app --port 8000\""
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.460.0",
    "next": "15.5.3",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
